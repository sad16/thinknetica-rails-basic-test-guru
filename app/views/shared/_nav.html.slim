nav.navbar.navbar-light.bg-light
  a.navbar-brand href=root_path TestGuru

  span.navbar-text
    - if user_signed_in?
      => t('.hello')
      b => current_user.email
      '|

      - if current_user.admin?
        => link_to t('.tests'), admin_tests_path
        '|
        => link_to t('.badges'), admin_badges_path
        '|
        => link_to t('.gists'), admin_gists_path
        '|
      - else
        => link_to t('.tests'), tests_path
        '|
        => link_to t('.badges'), badges_path
        '|

      = link_to t('.logout'), destroy_user_session_path, method: :delete
    - else
      => link_to t('.login'), new_user_session_path
      '|
      = link_to t('.singup'), new_user_registration_path
